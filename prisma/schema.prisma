}

enum Shift {
  MORNING
  NIGHT
}

model Vehicle {
  id                 String   @id @default(uuid())
  name               String
  plateNo            String?
  lastHourBeforeTest Float?
  lastHourAfterTest  Float?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt @default(now())
